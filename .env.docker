# Docker生产环境配置

# 后端服务配置
NODE_ENV=production
PORT=8080

# 数据库配置
DB_TYPE=sqlite
DB_PATH=/app/data/production.db

# JWT配置 - 生产环境请修改这些密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-docker
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-docker
JWT_REFRESH_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip,rar

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# 邮件配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Redis配置（可选）
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=